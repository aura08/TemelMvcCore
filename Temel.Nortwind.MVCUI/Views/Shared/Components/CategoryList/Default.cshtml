@model Temel.Nortwind.MVCUI.Models.CategoryListViewModel

@{
    ViewData["Title"] = "View";
}

<div class="list-group">
   @foreach(var category in Model.Categories)
   {
       var css = "list-group-item ";
       if (category.CategoryId == Model.CurrentCategory)
       {
           css +="active";
       }
    <a class="@css" href="/product/index?category=@category.CategoryId">@category.CategoryName</a>
   }

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

